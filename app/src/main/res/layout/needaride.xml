<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundRed">


    <LinearLayout
        android:id="@+id/hawk_bar_default"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/backgroundWhite">


        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight=".8"
            android:src="@drawable/hawkpark_logo_2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:background="@color/backgroundRed"
            android:fontFamily="sans-serif-condensed"
            android:gravity="bottom|center"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/textBlack"
            android:textSize="12pt"
            tools:text="@string/needa_ride" />
        <Button
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:background="@drawable/sidemenu_buttonred"
            android:onClick="sidemenu_click"
            android:layout_gravity="center"/>

    </LinearLayout>
    <View
        android:id="@+id/border_black"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/textBlack"
        android:layout_below="@id/hawk_bar_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/backgroundWhite"
        android:layout_below="@id/border_black"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="426dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/border_black"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/leaving"
                android:textSize="10pt"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:background="@color/backgroundWhite"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/fistlinear"
                android:background="@color/backgroundWhite">


                <RadioButton
                    android:text="@string/now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leaving_now"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:text="@string/leaving_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leaving_in"
                    android:layout_weight="1"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/leavingin_txt"
                    android:hint="@string/mintuteHint"
                    android:backgroundTint="@color/accentGray" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parking_lot"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:text="@string/parked_in"
                android:layout_marginTop="15dp"
                android:textAlignment="center" />

            <Spinner
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:id="@+id/lot_spinner"
                android:spinnerMode="dropdown"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_up_location"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="10pt"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pickupLocation_spinner"
            android:spinnerMode="dropdown"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_passengers"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="10pt"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5pt">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_passenger"
                android:layout_marginLeft="5dp"
                android:id="@+id/one_passenger"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_passengers"
                android:layout_marginLeft="8dp"
                android:id="@+id/two_passengers"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_passengers"
                android:layout_marginLeft="8dp"
                android:id="@+id/three_passengers"/>

        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:onClick="needAride_submit"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/click_below_to_connect"
            android:background="@color/backgroundRed"
            android:textSize="8pt"
            android:textStyle="bold"
            android:padding="5dp"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundGray"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_weight="1"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username2_is_currently_waiting_for_carparc"
                android:textColor="@color/textWhite"
                android:padding="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username3_is_leaving_lot_22_in_10_minutes"
                android:textColor="@color/textWhite"
                android:padding="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username1_is_leaving_lot_60_now"
                android:textColor="@color/textWhite"
                android:padding="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_txt1"
                android:textColor="@color/textWhite"
                android:padding="3dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/example_txt2"
                android:textColor="@color/textWhite"
                android:padding="3dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
