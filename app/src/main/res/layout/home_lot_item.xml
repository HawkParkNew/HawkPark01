<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_list_btn_margin_top"
        android:layout_marginLeft="@dimen/home_list_btn_margin"
        android:layout_marginEnd="@dimen/home_list_btn_margin"
        android:layout_marginRight="@dimen/home_list_btn_margin"
        android:layout_marginStart="@dimen/home_list_btn_margin"
        android:layout_marginBottom="@dimen/home_list_btn_margin_top"
        android:requiresFadingEdge="horizontal"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textAllCaps="true"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_lot_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_list_btn_margin"
        android:layout_marginLeft="@dimen/home_list_btn_margin"
        android:layout_marginEnd="@dimen/home_list_btn_margin"
        android:layout_marginRight="@dimen/home_list_btn_margin"
        android:layout_marginStart="@dimen/home_list_btn_margin"
        android:requiresFadingEdge="horizontal"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>